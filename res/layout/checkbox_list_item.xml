<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
>
	<CheckBox
	    android:id="@+id/checked"

	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:layout_margin="8dp"
	    android:layout_gravity="top"

	/>
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="0dp"
	    android:layout_weight="1"    
		android:layout_gravity="center_vertical"
	>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		>
			<ImageView
			    android:layout_width="14sp"
			    android:layout_height="14sp"
			    android:layout_weight="0" 
				android:layout_marginRight="4dp"
			    android:id="@+id/favicon"
				android:layout_gravity="center"
			/>
			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
	
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"
	
		
				android:textColor="#ffffffff"
		
			    android:id="@+id/url"
				android:text="urlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurlurl"
			/>
		</LinearLayout>

		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/title"
			android:text="titletitletitletitletitletitle"
			android:textColor="#ffffffff"
			android:textStyle="bold"
		/>

		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/detail"
			android:text="detaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetaildetail"
		/>
	</LinearLayout>
</LinearLayout>
